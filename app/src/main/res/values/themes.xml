<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ushop" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_orange</item>
        <item name="colorPrimaryVariant">@color/color_dark_orange</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_dark_orange</item>
        <item name="colorSecondaryVariant">@color/color_dark_orange</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="customTablayout" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/phagspab</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="BottomNavigationTheme" parent="Theme.Ushop">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="fontFamily">@font/phagspa</item>
<!--        <item name="backgroundTint">@color/color_orange</item>-->
    </style>
</resources>